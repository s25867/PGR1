#include <iostream>
#include <string>
#include <vector>
using namespace std;

auto get_best_student()
{
	float srednia;
	vector <float> W;
	float pomocnicza = 0;

	cout << "Podaj srednie studentow, napisz 0 aby zakonczyc" << endl;
	do
	{
		cin >> srednia;
		W.push_back(srednia);
	} while (srednia != 0);

	std::cout << "Najwyzsza srednia to: ";
	for (int i = 0; i < W.size(); i++)
		if (pomocnicza < W.at(i))
			pomocnicza = W.at(i);
	cout << pomocnicza << endl;
}

int main()
{
	get_best_student();
	return 0;
}
