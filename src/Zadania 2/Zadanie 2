#include <iostream>
#include <string>
#include <vector>
using namespace std;

bool is_palindrome()
{
	string pomocnicza;
	string wyraz;
	char last;
	char first;
	int d1;
	int i;
	std::cin >> wyraz;
	pomocnicza = wyraz;
	//cout << pomocnicza << endl;
	for (i = 1; i <= wyraz.size(); i++)
	{
		d1 = wyraz.size();
		first = wyraz[d1 - wyraz.size() + i - 1];
		last = wyraz[wyraz.size() - i];
		if (first == last)
			continue;
		else
		//      cout << " nie jest palindromem" << endl; 
			return 0;
	}
	 //     cout << "jest palindromem" << endl;
	return 1;
}


auto filter_palindromes()
{
	vector <string> palindrom;
	string wyraz;
	string pomocnicza;
	string palindromy;


	std::cout << "Podaj wyrazy, napisz koniec aby zakonczyc" << std::endl;

	do
	{
		if (is_palindrome() == 1)
			cout << "Wyraz jest palindromem!" << endl;
		else 
			cout << "Wyraz nie jest palindromem." << endl;
	//		palindromy += wyraz += " ";
	} while (wyraz != "koniec");
	return palindromy;
}

int main()
{
	cout << filter_palindromes() << endl;
    return 0;
}
