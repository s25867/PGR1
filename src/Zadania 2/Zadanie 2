#include <iostream>
#include <string>
#include <vector>
using namespace std;

auto input()
{
	string wyraz;
	cout << "Podaj wyraz" << endl;
	cin >> wyraz;
	return wyraz;
}

string is_palindrome()
{
	string wyraz;
	string cos;
	char last;
	char first;
	wyraz = input();
	int d1;
	int i;
	for (i = 1; i <= wyraz.size(); i++)
	{
		d1 = wyraz.size();
		first = wyraz[d1 - wyraz.size() + i - 1];
		last = wyraz[wyraz.size() - i];
		if (first == last)
			continue;
		else
			//         cout << " nie jest palindromem" << endl; 
			cos = "0";
			return cos;
	}
	//        cout << "jest palindromem" << endl;
	cos = wyraz;
	return cos;
}


auto filter_palindromes()
{
	vector <string> W;
	string wyraz;
	string pomocnicza;
	string palindromy;
	string cos;
	int i;
	for (i = 1; i < 5; i++)
	{
		wyraz = is_palindrome();
		if (wyraz == "0")
			cout << "nie jest to palindrom" << endl;
		else {
			W.push_back(wyraz);
		}
}
	std::cout << "Palindromy to: ";
	for (i = 0; i < W.size(); i++)
	 cout << W.at(i) << " ";
}
int main()
{
	filter_palindromes();
	return 0;
}
