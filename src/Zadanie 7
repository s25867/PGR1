#include <iostream>
#include <string>
using namespace std;

std::string wyraz_value()
{
    std::string wyraz;
    std::cout << "Podaj wyraz\n";
    std::cin >> wyraz;
    return wyraz;
}

char litera_value()
{
    char litera;
    std::cout << "Podaj szukana litere\n";
    std::cin >> litera;
    return litera;
}

auto count_chars() 
{
    string wyraz;
    char litera;
    int ilosc;
    string g;

    wyraz = wyraz_value();
    litera = litera_value();

    int d1;
    ilosc = 0;
    int i = 0;
        for (i = 0; i <= wyraz.size(); i++)
        {
            d1 = 0;
            d1 = wyraz.size();
            if (wyraz[d1 - i] == litera)
                ilosc++;
            else continue;
        }

        std::cout << "Wyraz " << wyraz << " ma " << ilosc << " znakow " << litera << "\n";
            return 0;
    }

int main()
{
    count_chars();

}
