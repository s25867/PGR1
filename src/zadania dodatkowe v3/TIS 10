#include <iostream>
#include <vector>
#include <string>
using namespace std;

class macierze {
public:
    int rozmiar;
    int wariant;
    int k = 0;
    vector<int>liczba;
    int pomocnicza = 0;
    void wynik() {

        cout << "podaj wariant macierzy (1 2 3 4)" << endl;
        cin >> wariant;
        cout << "podaj rozmiar" << endl;
        cin >> rozmiar;

        switch (wariant) {
        case 1:
            for (int j = 0; j < rozmiar; j++) {
                cout << "[";
                for (int i = 0; i < rozmiar; i++) {
                    cout << i + j << " ";
                }
                cout << "]" << endl;
                
            }
            break;
        case 2:
            for (int j = 0; j < (rozmiar); j++) {
                cout << "[";
                for (int i = rozmiar; i > 0; i--) {
                    pomocnicza = j - i + 1;
                    if (pomocnicza < 0)
                        pomocnicza = 0;
                    cout << pomocnicza << " ";
                }
                cout << "]" << endl;
                
            }
            break;
        case 3:
            pomocnicza = 0;
            for (int j = 0; j < rozmiar; j++) {
                cout << "[";
                k = k+2;
                
                for (int i = 0; i < rozmiar; i++) {
                    pomocnicza = pomocnicza + 2;
                    liczba.push_back(pomocnicza);
                    if (liczba[i] < k) {
                        liczba[i] = k;
                    
                    }

                    cout << liczba[i] << " ";
                }
                cout << "]" << endl;
                
            }
            break;
        case 4:
            pomocnicza = rozmiar;
            for (int j = 0; j < rozmiar; j++) {
                cout << "[";
                for (int i = rozmiar; i > 0; i--) {
                    pomocnicza = i - j + 1;
                    if (pomocnicza < 0)
                        pomocnicza = 0;
                    cout << pomocnicza << " ";
                }
                cout << "]" << endl;
                
            }
            break;
        }
    }

};


int main() {
    macierze n;
    n.wynik();

    return 0;
}
