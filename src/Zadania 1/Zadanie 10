#include <iostream>
#include <string>
using namespace std;

void box_print()
{
    string wyraz;
    int dlugosc[5];
    int szerokosc;
    int d1 = 0;
    int pomocnicza;
    string W[5];

    //input
    cout << "podaj 5 slow" << endl;
    for (int i = 0; i < 5; i++)
    {
        cin >> wyraz;
        pomocnicza = wyraz.size();
        W[i] = wyraz;
        dlugosc[i] = pomocnicza;
        if (d1 < pomocnicza)
            d1 = pomocnicza;
    }

    szerokosc = d1 + 2;
    for (int i = 0; i < szerokosc; i++)
        cout << "*";
    cout << endl;

    for (int j = 0; j < 5; j++)
    {
        cout << "* ";
        cout << W[j];
        for(int i = 0; i < d1 - dlugosc[j] + 1; i++)
        {
            cout << " ";
        }
        cout << "*";
        cout << endl;
    }
    for (int i = 0; i < szerokosc; i++)
        cout << "*";
}
int main()
{
    box_print();
    return 0;
}
