#include <iostream>
#include <string>
using namespace std;

std::string wyraz_value()
{
    std::string wyraz;
    std::cout << "Podaj wyraz\n";
    std::cin >> wyraz;
    return wyraz;
}


bool is_palindrome() 
{
    string wyraz;
    bool a;
    char last;
    char first;

    wyraz = wyraz_value();
    int d1;
    int i;
        for (i = 1; i <= wyraz.size(); i++)
        {
            d1 = wyraz.size();
            first = wyraz[d1 - wyraz.size() + i - 1];
          last = wyraz[wyraz.size() - i];
       if (first == last)
           continue;
       else 
  //         cout << " nie jest palindromem" << endl; 
       return 0;
        }
//        cout << "jest palindromem" << endl;
            return 1;
    }

int main()
{
    if (is_palindrome() == 1)
        cout << "jest palindromem" << endl;
    else if (is_palindrome() == 0)
        cout << "nie jest palindromem" << endl;
    else cout << "error" << endl;
}
